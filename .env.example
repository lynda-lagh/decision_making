# WeeFarm Predictive Maintenance - Environment Configuration
# Copy this file to .env and update with your values

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://weefarm_user:your_password_here@localhost:5432/weefarm_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weefarm_db
DB_USER=weefarm_user
DB_PASSWORD=your_password_here

# ===== API CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=5000
API_KEY=your-secret-api-key-change-this
API_RELOAD=True

# ===== DASHBOARD CONFIGURATION =====
DASHBOARD_PORT=8501
DASHBOARD_TITLE=WeeFarm Predictive Maintenance
API_BASE_URL=http://localhost:5000/api/v1

# ===== ML PIPELINE CONFIGURATION =====
PIPELINE_SCHEDULE=0 6 * * *  # Daily at 6:00 AM (cron format)
MODEL_PATH=models/
SVM_MODEL_FILE=svm_model.pkl
XGBOOST_MODEL_FILE=xgboost_model.pkl
FEATURE_SELECTOR_FILE=feature_selector.pkl

# ===== KPI CONFIGURATION =====
KPI_CALCULATION_ENABLED=True
KPI_ALERT_THRESHOLD_CRITICAL=70
KPI_ALERT_THRESHOLD_HIGH=40
KPI_ALERT_THRESHOLD_MEDIUM=20

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FILE=logs/weefarm.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===== SECURITY =====
SECRET_KEY=your-secret-key-for-jwt-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# ===== EMAIL NOTIFICATIONS (Optional) =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=weefarm@example.com
EMAIL_TO=maintenance@weefarm.tn

# ===== DOCKER CONFIGURATION =====
COMPOSE_PROJECT_NAME=weefarm
POSTGRES_VERSION=15
PYTHON_VERSION=3.11
